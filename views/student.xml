<odoo>
  <data>
    <record model="ir.ui.view" id="student_student_tree">
      <field name="name">student.student.tree</field>
      <field name="model">student.student</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre" />
          <field name="primer_apellido" />
          <field name="segundo_apellido" />
          <field name="edad" />
          <field name="sexo" />
          <field name="fecha_nacimiento" />
          <field name="hobby" />
          <field name="direccion" />
          <field name="ciudad" />
          <field name="acudiente" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="student_student_form">
      <field name="name">student.student.form</field>
      <field name="model">student.student</field>
      <field name="arch" type="xml">
        <form string="Form">
          <sheet>
            <group>
              <field name="nombre" />
              <field name="primer_apellido" />
              <field name="segundo_apellido" />
              <field name="edad" />
              <field name="sexo" />
              <field name="fecha_nacimiento" />
              <field name="hobby" />
              <field name="direccion" />
              <field name="ciudad" />
              <field name="acudiente" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="student.action_window">
      <field name="name">Estudiantes</field>
      <field name="res_model">student.student</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Estudiantes" id="student.menu"/>

    <!-- menu categories -->

    <menuitem name="Estudiantes" id="student.student_parent" parent="student.menu"/>

    <!-- actions -->

    <menuitem name="Estudiante" id="student.menu_student" parent="student.student_parent" action="student.action_window"/>

  </data>
</odoo>